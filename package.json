{
  "name": "panacea-launcher",
  "version": "0.0.2",
  "description": "Panacea Desktop Launcher",
  "homepage": "https://github.com/Psydonic/Panacea-Launcher#readme",
  "bugs": {
    "url": "https://github.com/Psydonic/Panacea-Launcher/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Psydonic/Panacea-Launcher.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder -mwl",
    "test": "playwright test --project electron"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.panacea.launcher",
    "productName": "Panacea Desktop Launcher",
    "asar": true,
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**"
    ],
    "extraResources": [
      "docker-compose.yml"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Psydonic",
        "repo": "Panacea-Launcher"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "signAndEditExecutable": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png"
    }
  }
}
